<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fyber.UnityFairBid"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="preferExternal">

    <!-- Several networks FairBid mediates impose a min API higher than FairBid does. 
    By declaring them within the 'overrideLibrary' you can still use a lower min API in your app.
    FairBid will ensure, at runtime, that none of these networks will be started when running on a OS lower the minimum one required.-->
    <uses-sdk tools:overrideLibrary="com.bytedance,
                                     com.google.android.ads.consent,
                                     com.google.android.gms.ads,
                                     com.google.android.gms.ads.impl,
                                     com.google.android.gms.common,
                                     com.google.android.gms.tasks,
                                     com.my.target,
                                     com.my.tracker,
                                     com.ogury.ad,
                                     com.ogury.core,
                                     com.ogury.sdk,
                                     com.tiktok,
                                     io.github.mytargetsdk,
                                     net.pubnative.lite.sdk,
                                     net.pubnative.lite.sdk.banner,
                                     net.pubnative.lite.sdk.core,
                                     net.pubnative.lite.sdk.interstitial,
                                     net.pubnative.lite.sdk.logger,
                                     net.pubnative.lite.sdk.nativeads,
                                     net.pubnative.lite.sdk.reporting,
                                     net.pubnative.lite.sdk.rewarded,
                                     net.pubnative.lite.sdk.source.pnapi,
                                     net.pubnative.lite.sdk.topicsapi,
                                     net.pubnative.lite.sdk.viewability" />
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"/>

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/app_icon"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name="com.unity3d.player.UnityPlayerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- This is an universal app id for AdMob. Replace it with your own credentials. More information here https://developers.google.com/admob/android/quick-start#update_your_androidmanifestxml -->
        <meta-data
                android:name="com.google.android.gms.ads.APPLICATION_ID"
                android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>
</manifest>
